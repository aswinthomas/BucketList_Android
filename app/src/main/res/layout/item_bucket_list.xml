<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="117dp"
        android:layout_margin="12dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_item_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/image_view_item_icon"
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/text_view_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/card_view_item_icon"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/card_view_item_icon"
            android:fontFamily="sans-serif-medium"
            android:text="Item Title"
            android:textColor="#222222"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/text_view_item_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_item_title"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@id/card_view_item_icon"
            android:fontFamily="sans-serif-light"
            android:text="This is the item description"
            android:textColor="#888888"
            android:textSize="14sp" />

        <RatingBar
            android:id="@+id/rating_bar"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:rating="3.5" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>

